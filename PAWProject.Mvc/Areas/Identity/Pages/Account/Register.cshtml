@page
@model RegisterModel
@{
    ViewData["Title"] = "Crear Cuenta";
    Layout = "_Layout";
}

<div class="login-container register-container">
    <div class="login-card register-card">

        <h2 class="text-center mb-4">Crear Cuenta</h2>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <!-- EMAIL -->
            <div class="input-group mb-3">
                <span class="input-group-text login-icon"><i class="bi bi-envelope-fill"></i></span>
                <input asp-for="Input.Email" class="form-control login-input" autocomplete="username" aria-required="true" placeholder="Correo electrónico" />
            </div>
            <span asp-validation-for="Input.Email" class="text-danger mb-2 d-block"></span>

            <!-- PASSWORD -->
            <div class="input-group mb-3">
                <span class="input-group-text login-icon"><i class="bi bi-lock-fill"></i></span>
                <input asp-for="Input.Password" class="form-control login-input" autocomplete="new-password" aria-required="true" placeholder="Contraseña" />
            </div>
            <span asp-validation-for="Input.Password" class="text-danger mb-2 d-block"></span>

            <!-- CONFIRM PASSWORD -->
            <div class="input-group mb-3">
                <span class="input-group-text login-icon"><i class="bi bi-shield-lock-fill"></i></span>
                <input asp-for="Input.ConfirmPassword" class="form-control login-input" autocomplete="new-password" aria-required="true" placeholder="Confirmar contraseña" />
            </div>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger mb-2 d-block"></span>

            <!-- ROLE -->
            <div class="input-group mb-4">
                <span class="input-group-text login-icon"><i class="bi bi-people-fill"></i></span>
                <select asp-for="Input.Role" asp-items="Model.Roles" class="form-select login-input">
                    <option value="">Seleccione un rol</option>
                </select>
            </div>

            <!-- SUBMIT -->
            <button id="registerSubmit" type="submit" class="btn btn-primary w-100 login-btn">
                Registrarse
            </button>

            <!-- LINKS -->
            <div class="form-links mt-3 text-center">
                <p><a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">¿Ya tienes cuenta? Inicia sesión</a></p>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
