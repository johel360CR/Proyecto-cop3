@model PAWProject.Mvc.Models.SourceItemUploadViewModel

<h2>Subir noticia en JSON</h2>

<form asp-action="Upload" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>SourceId</label>
        <input asp-for="SourceId" class="form-control" />
    </div>
    <div class="form-group">
        <label>Archivo JSON</label>
        <input asp-for="JsonFile" type="file" accept=".json" class="form-control" />
        <span asp-validation-for="JsonFile" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Subir noticia</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info mt-3">@ViewBag.Message</div>
}